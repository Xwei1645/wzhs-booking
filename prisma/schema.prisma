// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id         Int      @id @default(autoincrement())
  account    String   @unique
  password   String
  name       String
  role       String   @default("user") // super_admin, admin, user
  status     Boolean  @default(true)
  createTime DateTime @default(now())
  updatedAt  DateTime @updatedAt
  organizations Organization[]
  bookings      Booking[]
  sessions      Session[]

  @@map("users")
}

model Session {
  id        String   @id
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@map("sessions")
}

model Organization {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  description String?
  users       User[]
  bookings    Booking[]
  createTime  DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("organizations")
}

model Room {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  capacity    Int?
  location    String?
  description String?
  status      Boolean  @default(true) // true: available, false: maintenance
  bookings    Booking[]
  createTime  DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("rooms")
}

model Booking {
  id             Int          @id @default(autoincrement())
  roomId         Int
  room           Room         @relation(fields: [roomId], references: [id])
  organizationId Int
  organization   Organization @relation(fields: [organizationId], references: [id])
  userId         Int
  user           User         @relation(fields: [userId], references: [id])
  startTime      DateTime
  endTime        DateTime
  purpose        String
  remark         String?
  status         String       @default("pending") // pending, approved, cancelled, rejected
  createTime     DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  @@map("bookings")
}

model AutoApprovalRule {
  id             Int      @id @default(autoincrement())
  name           String
  // 触发条件 (null 表示不限制)
  organizationId Int?
  roomId         Int?
  userId         Int?
  maxDuration    Int?     // 最大时长（分钟）
  startHour      String?  // 允许的开始时间 (HH:mm)
  endHour        String?  // 允许的结束时间 (HH:mm)
  
  action         String   @default("approve") // approve, reject
  status         Boolean  @default(true)
  createTime     DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@map("auto_approval_rules")
}
